<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header: Title + Avatar -->
        <RelativeLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp">

            <!-- Title with updated font and color -->
            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textColor="#2196F3"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-medium" />

            <!-- Avatar with border color -->
            <ImageView
                android:id="@+id/avatarImageView"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_alignParentEnd="true"
                android:padding="2dp"
                android:src="@drawable/admin"
                android:background="@drawable/circle_avatar_background_blue"
                android:scaleType="centerCrop"
                android:elevation="3dp" />
        </RelativeLayout>

        <!-- Checkout Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headerLayout"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title "Checkout" -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="Checkout"
                    android:textColor="#2196F3"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Order information -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:gravity="center"
                            android:text="Order Information"
                            android:textColor="#212121"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- Image of the selected product -->
                        <ImageView
                            android:id="@+id/imgProduct"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="Selected Product Image"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/txtProductName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="Product"
                            android:textColor="#212121"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtQuantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="Quantity"
                            android:textColor="#212121"
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- User information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <!-- Display full name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edtName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_background"
                            android:hint="Enter Full Name"
                            android:padding="12dp"
                            android:textSize="14sp" />

                        <!-- Edit button -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp"
                            app:cardBackgroundColor="#2196F3"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp">

                            <ImageView
                                android:id="@+id/btnEditName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@android:drawable/ic_menu_edit"
                                android:tint="#FFFFFF" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- Display address -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edtAddress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_background"
                            android:hint="Enter Address"
                            android:padding="12dp"
                            android:textSize="14sp" />

                        <!-- Edit button -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="8dp"
                            app:cardBackgroundColor="#2196F3"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp">

                            <ImageView
                                android:id="@+id/btnEditAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@android:drawable/ic_menu_edit"
                                android:tint="#FFFFFF" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <!-- Button Group -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- Apply discount code -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:cardBackgroundColor="#FFF3E0"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="2dp">

                        <Button
                            android:id="@+id/btnApplyCode"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackground"
                            android:text="Apply Discount Code"
                            android:textAllCaps="false"
                            android:textColor="#FF9800"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                    <!-- Notes -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:cardBackgroundColor="#F5F5F5"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="2dp">

                        <Button
                            android:id="@+id/btnNote"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackground"
                            android:text="Notes"
                            android:textAllCaps="false"
                            android:textColor="#757575" />
                    </androidx.cardview.widget.CardView>

                    <!-- Place Order -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:cardBackgroundColor="#FFCDD2"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="3dp">

                        <Button
                            android:id="@+id/btnOrder"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackground"
                            android:text="Place Order"
                            android:textAllCaps="false"
                            android:textColor="#D32F2F"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>
