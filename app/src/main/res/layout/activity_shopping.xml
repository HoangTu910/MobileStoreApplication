<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="12dp">

    <!-- Header: Title + Avatar -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <!-- Title -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cellphone Store"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#212121"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-medium" />

        <!-- Avatar -->
        <ImageView
            android:id="@+id/avatarImageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:padding="2dp"
            android:src="@drawable/admin"
            android:background="@drawable/circle_avatar_background"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <!-- Search Bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/searchCardView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/headerLayout"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Search for phones..."
                android:paddingStart="16dp"
                android:paddingEnd="48dp"
                android:background="@null"
                android:textColorHint="#9E9E9E"
                android:textColor="#212121"
                android:textSize="14sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Navigation Bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/navBarCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchCardView"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#2196F3">

        <LinearLayout
            android:id="@+id/navbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4"
            android:padding="4dp">

            <Button
                android:id="@+id/btnProducts"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:text="Phones"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/selected_tab_background"
                android:paddingTop="4dp"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnShop"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:text="Cart"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/tab_background"
                android:paddingTop="4dp"
                android:textAllCaps="false"
                android:fontFamily="sans-serif" />

            <Button
                android:id="@+id/btnPayment"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:text="Payment"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/tab_background"
                android:paddingTop="4dp"
                android:textAllCaps="false"
                android:fontFamily="sans-serif" />

            <Button
                android:id="@+id/btnProfile"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:text="Profile"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/tab_background"
                android:paddingTop="4dp"
                android:textAllCaps="false"
                android:fontFamily="sans-serif" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Category Chips -->
    <HorizontalScrollView
        android:id="@+id/categoryScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/navBarCardView"
        android:layout_marginTop="16dp"
        android:scrollbars="none">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/categoryChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="true"
            app:chipSpacing="8dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                app:chipBackgroundColor="#2196F3"
                android:textColor="#FFFFFF" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="iPhone"
                app:chipBackgroundColor="#E0E0E0"
                android:textColor="#212121" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Samsung"
                app:chipBackgroundColor="#E0E0E0"
                android:textColor="#212121" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xiaomi"
                app:chipBackgroundColor="#E0E0E0"
                android:textColor="#212121" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oppo"
                app:chipBackgroundColor="#E0E0E0"
                android:textColor="#212121" />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Product Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/productRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/categoryScrollView"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />

